<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/labelTitle"
        android:layout_width="match_parent"
        android:layout_height="53.33dp"
        android:background="@color/bgColorType01"
        android:gravity="center"
        android:text="개인정보 변경"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="23.33dp">

            <kr.co.digitalanchor.studytime.view.FontTextView
                android:id="@+id/labelEmailAddr"
                android:layout_width="match_parent"
                android:layout_height="38.33dp"
                android:background="@drawable/box_type_05_bg"
                android:gravity="center_vertical"
                android:paddingLeft="33.33dp"
                android:paddingRight="33.33dp"
                android:singleLine="true"
                android:textSize="16dp" />

            <kr.co.digitalanchor.studytime.view.FontEditText
                android:id="@+id/editPassword"
                android:layout_width="match_parent"
                android:layout_height="38.33dp"
                android:layout_marginTop="23.33dp"
                android:background="@drawable/box_type_05_bg"
                android:gravity="center_vertical"
                android:hint="비밀번호 (영문, 숫자 조합 6자리 이상)"
                android:paddingLeft="33.33dp"
                android:paddingRight="33.33dp"
                android:singleLine="true"
                android:textColorHint="#A3A3A3"
                android:textSize="16dp"
                android:inputType="textPassword"/>

            <kr.co.digitalanchor.studytime.view.FontEditText
                android:id="@+id/editPasswordAgain"
                android:layout_width="match_parent"
                android:layout_height="38.33dp"
                android:layout_marginTop="23.33dp"
                android:background="@drawable/box_type_05_bg"
                android:gravity="center_vertical"
                android:hint="비밀번호를 한번 더 입력하세요."
                android:paddingLeft="33.33dp"
                android:paddingRight="33.33dp"
                android:singleLine="true"
                android:textColorHint="#A3A3A3"
                android:textSize="16dp"
                android:inputType="textPassword"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.33dp"
                android:layout_marginTop="23.33dp"
                android:background="@color/bgColorType01" />

            <kr.co.digitalanchor.studytime.view.FontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="추가 정보입력 (필수 입력사항은 아닙니다.)"
                android:textColor="@color/textColorType04"
                android:textSize="16dp" />

            <kr.co.digitalanchor.studytime.view.FontEditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="38.33dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/box_type_05_bg"
                android:gravity="center_vertical"
                android:hint="부모님 이름"
                android:paddingLeft="33.33dp"
                android:paddingRight="33.33dp"
                android:singleLine="true"
                android:textColorHint="#A3A3A3"
                android:textSize="16dp"
                android:inputType="text"/>

            <kr.co.digitalanchor.studytime.view.FontEditText
                android:id="@+id/editBirthDate"
                android:layout_width="match_parent"
                android:layout_height="38.33dp"
                android:layout_marginTop="23.33dp"
                android:background="@drawable/box_type_05_bg"
                android:gravity="center_vertical"
                android:hint="생년월일 ('-' 없이 입력해 주세요.)"
                android:paddingLeft="33.33dp"
                android:paddingRight="33.33dp"
                android:singleLine="true"
                android:textColorHint="#A3A3A3"
                android:textSize="16dp"
                android:inputType="date"/>


            <kr.co.digitalanchor.studytime.view.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.67dp"
                android:text="성별"
                android:textSize="16dp" />

            <RadioGroup
                android:id="@+id/radioGender"
                android:layout_width="match_parent"
                android:layout_height="38.33dp"
                android:layout_marginTop="8.67dp"
                android:orientation="horizontal">

                <kr.co.digitalanchor.studytime.view.FontRadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/box_type_06_bg"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:text="남성"
                    android:textColor="@color/text_01_selector"
                    android:textSize="16dp" />

                <kr.co.digitalanchor.studytime.view.FontRadioButton
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="11dp"
                    android:layout_weight="1"
                    android:background="@drawable/box_type_06_bg"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:text="여성"
                    android:textColor="@color/text_01_selector"
                    android:textSize="16dp" />

            </RadioGroup>

            <kr.co.digitalanchor.studytime.view.FontButton
                android:id="@+id/buttonSignUp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/box_type_07_bg"
                android:gravity="center"
                android:text="회원가입"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>