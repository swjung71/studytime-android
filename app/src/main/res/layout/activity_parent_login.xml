<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="92dp"
                android:scaleType="fitCenter"
                android:src="@drawable/login_logo" />

            <EditText
                android:id="@+id/editEmailAddr"
                android:layout_width="270dp"
                android:layout_height="46.67dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="52.33dp"
                android:background="@drawable/box_type_03_bg"
                android:hint="이메일 주소"
                android:paddingLeft="33.33dp"
                android:paddingRight="33.33dp"
                android:singleLine="true"
                android:textColorHint="@color/bgColorType01" />

            <EditText
                android:id="@+id/editPassword"
                android:layout_width="270dp"
                android:layout_height="46.67dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18.67dp"
                android:background="@drawable/box_type_03_bg"
                android:hint="Password"
                android:paddingLeft="33.33dp"
                android:paddingRight="33.33dp"
                android:singleLine="true"
                android:textColorHint="@color/bgColorType01" />

            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="46.67dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18.67dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonSignUp"
                    android:layout_width="129.33dp"
                    android:layout_height="46.67dp"
                    android:background="@drawable/box_type_04_bg"
                    android:gravity="center"
                    android:text="회원가입"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/buttonLogin"
                    android:layout_width="129.33dp"
                    android:layout_height="46.67dp"
                    android:layout_marginLeft="10.67dp"
                    android:background="@drawable/box_type_04_bg"
                    android:gravity="center"
                    android:text="로그인"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

            </LinearLayout>

            <Button
                android:layout_width="270dp"
                android:layout_height="46.67dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10.67dp"
                android:background="@drawable/box_type_04_bg"
                android:gravity="center"
                android:text="비밀번호 찾기"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:text="@string/copyright"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
