<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/buttonShutdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:src="@drawable/button_on_selector" />

        <ImageButton
            android:id="@+id/buttonChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="91.67dp"
            android:background="@null"
            android:src="@drawable/button_chat" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/buttonUse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="23.33dp"
        android:layout_marginRight="18dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/button_use" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53.33dp"
        android:background="@color/black_opacity_50">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="34.67dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:background="@drawable/img_point"
            android:orientation="horizontal"
            android:paddingRight="6dp">

            <kr.co.digitalanchor.studytime.view.FontTextView
                android:id="@+id/labelPoint"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="26.33dp"
                android:maxLength="3"
                android:paddingLeft="6.67dp"
                android:singleLine="true"
                android:text="9934234"
                android:textColor="@color/white"
                android:textSize="18.33dp" />

            <ImageButton
                android:id="@+id/buttonPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/button_point" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/buttonMenu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:background="@null"
            android:clickable="true"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/button_menu" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/imgGuide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/guide"
        android:clickable="true"
        android:visibility="gone">

        <kr.co.digitalanchor.studytime.view.FontButton
            android:id="@+id/buttonClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/transparent"
            android:text="X"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </FrameLayout>

</FrameLayout>
