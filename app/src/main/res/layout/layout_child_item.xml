<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/box_type_02_bg"
        android:padding="0.33dp">

        <View
            android:id="@+id/imgProfile"
            android:layout_width="91.33dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/profile_img" />

        <TextView
            android:id="@+id/labelNotiCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14.33dp"
            android:background="@drawable/icon_noti"
            android:gravity="center"
            android:text="10+"
            android:textColor="#ff7f00"
            android:textSize="12dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/labelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12.33dp"
            android:layout_marginRight="12.33dp"
            android:layout_toLeftOf="@id/labelNotiCount"
            android:layout_toRightOf="@id/imgProfile"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusable="false"
            android:singleLine="true"
            android:textColor="#4a4a4a"
            android:textSize="18dp" />

    </RelativeLayout>
</LinearLayout>