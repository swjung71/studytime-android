<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="kr.co.digitalanchor.studytime.location.MapActivity">

    <kr.co.digitalanchor.studytime.view.FontTextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title_bar_height"
        android:background="@color/bgColorType01"
        android:gravity="center"
        android:text="위치 확인"
        android:textColor="@color/white"
        android:textSize="@dimen/activity_title_text" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/header" />

    <kr.co.digitalanchor.studytime.view.FontTextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:background="@color/black_opacity_50"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="@dimen/intro_title_info_02_text" />

</RelativeLayout>
