<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_c">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/block_password_logo_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/block_password_logo_margin_top"
                android:scaleType="fitCenter"
                android:src="@drawable/login_logo" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/block_password_icon_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/block_password_icon_margin_top"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_key" />

            <LinearLayout
                android:id="@+id/layoutAdminButton"
                android:layout_width="@dimen/block_password_edit_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/block_password_edit_layout_margin"
                android:orientation="vertical">

                <kr.co.digitalanchor.studytime.view.FontButton
                    android:id="@+id/buttonAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/block_password_edit_height"
                    android:background="@drawable/box_type_08_bg"
                    android:gravity="center"
                    android:text="보안 설정"
                    android:textColor="@color/white"
                    android:textSize="@dimen/block_password_button_text_size" />

                <kr.co.digitalanchor.studytime.view.FontButton
                    android:id="@+id/buttonInputPassword"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/block_password_edit_height"
                    android:background="@drawable/box_type_08_bg"
                    android:gravity="center"
                    android:text="비밀번호 입력"
                    android:textColor="@color/white"
                    android:textSize="@dimen/block_password_button_text_size" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>