<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_c">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="92dp"
                android:scaleType="fitCenter"
                android:src="@drawable/login_logo" />

            <kr.co.digitalanchor.studytime.view.FontEditText
                android:id="@+id/editEmailAddr"
                android:layout_width="270dp"
                android:layout_height="46.67dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="52.33dp"
                android:background="@drawable/box_type_03_bg"
                android:hint="부모님의 등록 이메일 주소"
                android:inputType="textUri"
                android:paddingLeft="33.33dp"
                android:paddingRight="33.33dp"
                android:singleLine="true"
                android:textColorHint="@color/bgColorType02"
                android:textSize="16dp" />

            <kr.co.digitalanchor.studytime.view.FontEditText
                android:id="@+id/editPassword"
                android:layout_width="270dp"
                android:layout_height="46.67dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18.67dp"
                android:background="@drawable/box_type_03_bg"
                android:hint="부모님의 등록 비밀번호"
                android:inputType="textPassword"
                android:paddingLeft="33.33dp"
                android:paddingRight="33.33dp"
                android:singleLine="true"
                android:textColorHint="@color/bgColorType02"
                android:textSize="16dp" />

            <kr.co.digitalanchor.studytime.view.FontEditText
                android:id="@+id/editChildName"
                android:layout_width="270dp"
                android:layout_height="46.67dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18.67dp"
                android:background="@drawable/box_type_03_bg"
                android:hint="자녀 이름"
                android:paddingLeft="33.33dp"
                android:paddingRight="33.33dp"
                android:singleLine="true"
                android:textColorHint="@color/bgColorType02"
                android:textSize="16dp" />

            <kr.co.digitalanchor.studytime.view.FontButton
                android:id="@+id/buttonLogin"
                android:layout_width="270dp"
                android:layout_height="46.67dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18.67dp"
                android:background="@drawable/box_type_08_bg"
                android:gravity="center"
                android:text="로그인"
                android:textColor="@color/white"
                android:textSize="16dp" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>