<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <kr.co.digitalanchor.studytime.view.FontTextView
        android:id="@+id/textDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="6월 2일(화) 오전 09:11"
        android:textColor="#8A8A8A"
        android:textSize="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="8dp">

        <kr.co.digitalanchor.studytime.view.FontTextView
            android:id="@+id/textMyMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/bubble_pink"
            android:maxEms="15"
            android:text="최대 18 자리까지 텍스트 늘어나는냐 해보자오ㄴㅇㄹㅇㄴㄻㄹㄴㅇㄻㄴㅇㄹ공"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_alignBottom="@id/textMyMessage"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/textMyMessage"
            android:background="@drawable/chat"
            android:orientation="horizontal"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/buttonRetry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_chat1_selector" />

            <ImageButton
                android:id="@+id/buttonDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:background="@color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_chat2_selector" />

        </LinearLayout>

        <kr.co.digitalanchor.studytime.view.FontTextView
            android:id="@+id/textReadCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/textMyMessage"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/textMyMessage"
            android:text="1"
            android:textColor="#8A8A8A"
            android:textSize="8dp"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="8dp">

        <kr.co.digitalanchor.studytime.view.FontTextView
            android:id="@+id/textGuestMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/bubble_gray"
            android:maxEms="15"
            android:text="최대 18 자리까지 텍스트 늘어나는냐 해보자오ㄴㅇㄹㅇㄴㄻㄹㄴㅇㄻㄴㅇㄹ공"
            android:textColor="#4A4A4A"
            android:textSize="14dp" />


        <kr.co.digitalanchor.studytime.view.FontTextView
            android:id="@+id/textReadCountGuest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/textGuestMessage"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/textGuestMessage"
            android:text="1"
            android:textColor="#8A8A8A"
            android:textSize="8dp"
            android:visibility="visible" />

    </RelativeLayout>

</LinearLayout>