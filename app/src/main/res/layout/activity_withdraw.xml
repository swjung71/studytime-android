<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/labelTitle"
        android:layout_width="match_parent"
        android:layout_height="53.33dp"
        android:background="@color/bgColorType01"
        android:gravity="center"
        android:text="회원탈퇴"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="회원탈퇴를 하실 경우 자녀의 스마트폰을 제어 하실 수 없으며, 계정 복구가 불가능합니다. 정말로 탈퇴 하시겠습니다."
            android:textColor="#4a4a4a"
            android:textSize="16dp" />

        <kr.co.digitalanchor.studytime.view.FontEditText
            android:id="@+id/editPassword"
            android:layout_width="match_parent"
            android:layout_height="38.33dp"
            android:layout_marginTop="23.33dp"
            android:background="@drawable/box_type_05_bg"
            android:gravity="center_vertical"
            android:hint="비밀번호 입력"
            android:inputType="textPassword"
            android:paddingLeft="33.33dp"
            android:paddingRight="33.33dp"
            android:singleLine="true"
            android:textColorHint="#A3A3A3"
            android:textSize="16dp" />

        <kr.co.digitalanchor.studytime.view.FontButton
            android:id="@+id/buttonWithdraw"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="34dp"
            android:background="@drawable/box_type_07_bg"
            android:gravity="center"
            android:text="확인"
            android:textColor="@color/white"
            android:textSize="16dp" />

    </LinearLayout>

</LinearLayout>